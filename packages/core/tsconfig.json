{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": "lib",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "types": ["vitest/globals", "vitest-extra/types"]
  },
  "include": ["src", "test"]
}
