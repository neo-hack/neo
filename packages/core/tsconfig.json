{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["ES2020", "ES2019"],
    "outDir": "lib",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "types": ["vitest/globals", "vitest-extra/types"],
    "plugins": [
      {
        "transform": "typescript-transform-extensions",
        "extensions": { ".ts": ".js" }
      },
      {
        "transform": "tsc-progress",
        "title": "NEO"
      }
    ]
  },
  "include": ["src", "test"]
}
