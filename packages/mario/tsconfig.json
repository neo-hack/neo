{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "ESNext"],
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "baseUrl": "./",
    "types": ["vitest/globals", "vitest-extra/types", "zen-observable"]
  },
  "include": ["src", "test"]
}
