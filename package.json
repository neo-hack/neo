{
  "name": "aiou",
  "version": "1.0.0",
  "description": "templates",
  "keywords": [
    "templates",
    "neo"
  ],
  "license": "MIT",
  "homepage": "https://github.com/neo-hack/neo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo-hack/neo.git"
  },
  "bugs": {
    "url": "https://github.com/neo-hack/neo/issues"
  },
  "author": {
    "name": "jiangweixian"
  },
  "main": "index.js",
  "files": [
    "packages/core"
  ],
  "scripts": {
    "lint": "eslint '**/*.{js,ts,tsx,json}'",
    "lint:fix": "eslint . --fix",
    "build": "pnpm build -r",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm run build && pnpm changeset publish",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "test": "pnpm vitest -r"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.5.1",
    "@changesets/cli": "^2.19.0",
    "@milahu/patch-package-with-pnpm-support": "6.4.8",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.12.0",
    "fs-extra": "^10.0.0",
    "glob": "7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "scopes": [
        "mario",
        "neo"
      ]
    }
  }
}
